{% extends 'backend/backend_layout.html.twig' %}

{% block title %}Casting index{% endblock %}

{% block content %}
    <h1>{{ movie.title }}<br>Casting</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Actor</th>
                <th>role</th>
                <th>OrderCredit</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for casting in castings %}
            <tr>
                <td>{{ casting.id }}</td>
                <td>{{ casting.person.name }}</td>
                <td>{{ casting.role }}</td>
                <td>{{ casting.orderCredit }}</td>
                <td>
                    <a href="{{ path('backend_casting_show', {'id': casting.id}) }}">show</a>
                    <a href="{{ path('backend_casting_edit', {'id': casting.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('backend_casting_new_by_movie', {'id': movie.id}) }}">Create new</a>
{% endblock %}
